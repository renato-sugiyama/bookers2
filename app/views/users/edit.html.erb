<h2>User info</h2>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= "error: " + message %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= form_with model:@user, local:true do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, id:"user_name" %>
  </div>
  <div class="field">
    <label for="user_profile_image">Image</label>
    <%= f.attachment_field :image, placeholder: "ファイルを洗選択", id:"user_profile_image" %>
  </div>
  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, id:"user_introduction" %>
  </div>
  <div class="action">
    <%= f.submit "Update User" %>
  </div>
<% end %>