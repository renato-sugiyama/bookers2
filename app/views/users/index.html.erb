<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= "error: " + message %></li>
  <% end %>
  </ul>
</div>
<% end %>
<div class="row">
<div class="col-xs-3">
    <%= render partial: 'books/user_info' %>
    <%= render partial: 'books/post_book' %>
</div>

<div class="col-xs-9">
    <h2>Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
                <td>
                  <%= attachment_image_tag user, :image, format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg", size: "50x50" %>
                </td>
                <td><%= user.name %></td>
                <td>
                    <%= link_to "Show", user_path(user.id) %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>