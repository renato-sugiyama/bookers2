<h2>User info</h2>
    <%= attachment_image_tag @user, :image, format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg", size: "100x100" %>
    <table class="table">
        <tbody>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <% if current_user.id == @user.id %>
            <%= link_to edit_user_path(current_user.id) do %>
            <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
            <% end %>
        <% else %>
            <%= link_to user_path(current_user.id) do %>
            <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
            <% end %>
        <% end %>
    </div>