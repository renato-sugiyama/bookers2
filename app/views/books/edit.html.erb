<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= "error: " + message %></li>
  <% end %>
  </ul>
</div>
<% end %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title, autofocus: true, class: "col-xs-12", id:"book_title" %>
  </div>
  <div class="field row">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body, autofocus: true, class: "col-xs-12", id:"book_body" %>
  </div>
  <div class="actions row">
    <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
  </div>
<% end %>
<%= link_to "Show", book_path(params[:id]) %>
|
<%= link_to "Back", books_path %>
</div>